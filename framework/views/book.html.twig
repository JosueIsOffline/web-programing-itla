{% extends "base.html.twig" %}

{% block title %}Libro #{{ id }} - Mi Framework PHP{% endblock %}

{% block content %}
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header bg-primary text-white">
				<h2 class="mb-0">
					<i class="fas fa-book-open me-2"></i>
					Libro #{{ id }}
				</h2>
			</div>
			<div class="card-body">
				<div class="alert alert-info" role="alert">
					<i class="fas fa-info-circle me-2"></i>
					Estás visualizando el libro con ID: <strong>{{ id }}</strong>
				</div>
				
				<p class="lead">Este es el contenido del libro número {{ id }}.</p>
				
				<div class="mt-4">
					<a href="/" class="btn btn-secondary">
						<i class="fas fa-arrow-left me-1"></i>Volver al Inicio
					</a>
					<a href="/books/create" class="btn btn-success">
						<i class="fas fa-plus me-1"></i>Crear Otro Libro
					</a>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block styles %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}
